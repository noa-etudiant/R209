{% extends 'base.html.twig' %}

{% block title %}Bienvenue sur la page de Noa !{% endblock %}

{% block body %}
<style>
    .example-wrapper { 
        margin: 1em auto; 
        max-width: 800px; 
        width: 95%; 
        font: 18px/1.5 sans-serif;
        opacity: 0;
        transform: translateY(20px);
        transition: all 0.8s ease-out;
    }
    
    .example-wrapper.visible {
        opacity: 1;
        transform: translateY(0);
    }
    
    .example-wrapper code { 
        background: #F5F5F5; 
        padding: 2px 6px;
        transition: all 0.3s ease;
    }
    
    h1 {
        color: #4facfe;
        text-align: center;
        margin-bottom: 30px;
        position: relative;
        display: inline-block;
    }
    
    h1::after {
        content: '';
        position: absolute;
        width: 100%;
        height: 3px;
        bottom: -10px;
        left: 0;
        background: linear-gradient(90deg, #4facfe, #00f2fe);
        transform: scaleX(0);
        transform-origin: left;
        transition: transform 0.5s ease;
    }
    
    ul {
        list-style-type: none;
        padding: 0;
    }
    
    li {
        margin: 15px 0;
        padding: 15px;
        background: rgba(245, 245, 245, 0.7);
        border-radius: 8px;
        transition: all 0.3s ease;
        transform: translateX(-20px);
        opacity: 0;
    }
    
    li:hover {
        transform: translateY(-3px);
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
    }
    
    .floating-emoji {
        position: fixed;
        font-size: 24px;
        opacity: 0;
        z-index: -1;
        animation: floatUp 4s ease-in forwards;
    }
    
    @keyframes floatUp {
        to {
            transform: translateY(-100vh) rotate(360deg);
            opacity: 0;
        }
    }
</style>

<div class="example-wrapper">
    <h1 id="welcome-title">Bienvenue sur la page de Noa !</h1>

    
</div>

